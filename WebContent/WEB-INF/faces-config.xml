<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
 <application>
        <el-resolver>
            org.springframework.web.jsf.el.SpringBeanFacesELResolver
        </el-resolver>
    </application>
    
    <managed-bean>
		<managed-bean-name>shoppingDaoImpl</managed-bean-name>
		<managed-bean-class>com.shopping.cart.DaoImpl.ShoppingDaoImpl</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
    <managed-bean>
		<managed-bean-name>fileStoreBean</managed-bean-name>
		<managed-bean-class>com.shopping.cart.DaoImpl.ShoppingDaoImpl.FileStoreBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
</faces-config>
